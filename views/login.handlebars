<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../src/public/css/style.css">
    <title>Login</title>
  </head>
  <body>
    <div class="row-md-4 d-flex align-items-end justify-content-end">
      <ul class="nav justify-content-end">
          <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Register</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
          </li>
      </ul>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-4 offset-md-4">
          <h1 class="color1">Welcome</h1>
          <form class="form_main" action="">
            <div class="login-form">
              <label class="form-label"></label>
              <div class="inputContainer">
                <input type="text" class="form-control" id="email" placeholder="Username"/>
              </div>
            </div>
            <div class="login-form">
              <label class="form-label"></label>
              <div class="inputContainer">
                <input type="password" class="form-control" id="password" placeholder="Password"/>
              </div>
            </div>
            <div class="col-md-4 offset-md-4 p-3">
              <div class="color2">
                <button type="button" class="button" id="btnLogIn">Ingresar</button>
              </div>
            </div>
          </form>
          <div class="color1" >
            <a href="/api/sessions/github">
              <button class="button">Github</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="../src/public/js/login.js"></script>
</html>
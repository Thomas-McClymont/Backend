<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../src/public/css/style.css">
        <title>Home</title>
    </head>
    <body>
        <div class="row-md-4 d-flex align-items-center justify-content-center">
            <ul class="nav justify-content-end">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/realtimeProducts">Form</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/chat">Chat</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/usermanagment">User manager</a>
                </li>  
                <li>
                    <button id="cartButton">Cart</button>
                </li>
            </ul>
        </div>
        <div class="container">
            <div class="search-bar">
                <form id="search-form"></form>
            </div>
            <div class="container">
                <div  class="row">
                    {{#each products.payload}}
                    <article class="container col-md-4">
                        <div class="card" id="id-card">
                            <div class="imgBx">
                                <img src={{thumbnail}} width="150"/>
                            </div>
                            <div class="contentBx">
                                <h2>{{title}}</h2>
                                <div class="color">
                                    <h3>${{price}}</h3>
                                </div>
                                <a href="/products/{{this._id}}"><button class="button" type="button" id="addCart-btn">Buy</button> </a>
                            </div>
                        </div>
                    </article>
                    {{/each}}
                </div>
            </div>
            <div class="row my-5">
                <div class="col">
                    <nav>
                        <ul class="pagination justify-content-center">
                            {{#if products.hasPrevPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{products.prevLink}}"><<</a>
                                </li>
                            {{/if}}
                            {{#if products.hasPrevPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{products.prevLink}}">{{products.prevPage}}</a>
                                </li>    
                            {{/if}}
                            <li class="page-item">
                                <a class="page-link">{{products.page}}</a>
                            </li>
                            {{#if products.hasNextPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{products.nextLink}}">{{products.nextPage}}</a>
                                </li>    
                            {{/if}}
                            {{#if products.hasNextPage}}
                                <li class="page-item">
                                    <a class="page-link" href="{{products.nextLink}}">>></a>
                                </li>
                            {{/if}}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </body>
    <script src="socket.io/socket.io.js"></script>
    <script src="/index.js"></script>
</html>